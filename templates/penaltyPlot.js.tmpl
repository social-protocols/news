      4: {pointShape: 'circle', pointSize: 5, interpolateNulls: false, lineDashStyle: [4,4], lineWidth: 2, targetAxisIndex: 1},
    },

    lineWidth: 3,
    colors: ['b32b6c', '3da389', 'red','green', '#FF6600'],
    chartArea:{left:80, top:50, bottom: 80, right: 80},
